Package: gsgsim
Type: Package
Title: Gloabal Sampling Grid simulation framework
Version: 1.0
Author: Lutz Fehrmann [aut, cre], 
        Nils Noelke [aut],
        Collins Kurkunda [aut], 
        Paul Magdon [aut], 
        Sebastian Schnell [aut]
Authors@R: c(person("Lutz", "Fehrmann", role = c("aut", "cre"), email = "lfehrma@gwgd.de"),
